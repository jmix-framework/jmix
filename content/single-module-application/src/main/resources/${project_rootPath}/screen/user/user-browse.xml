<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://UserBrowse.caption"
        focusComponent="usersTable">
    <data readOnly="true">
        <collection id="usersDc"
                    class="${project_rootPackage}.entity.User">
            <fetchPlan extends="_instance_name">
                <property name="username"/>
                <property name="firstName"/>
                <property name="lastName"/>
                <property name="email"/>
                <property name="enabled"/>
            </fetchPlan>
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from ${project_idPrefix}_User e order by e.username]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="usersTable">
        <groupTable id="usersTable"
                    width="100%"
                    dataContainer="usersDc"
                    multiselect="true"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
            </actions>
            <columns>
                <column id="username"/>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="email"/>
                <column id="enabled"/>
            </columns>
            <pagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="usersTable.create"/>
                <button id="editBtn" action="usersTable.edit"/>
                <button id="removeBtn" action="usersTable.remove"/>
                <button id="refreshBtn" action="usersTable.refresh"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
