<window xmlns="http://jmix.io/schema/ui/window"
        caption="">
    <layout expand="tablesTabSheet" spacing="true">
        <tabSheet id="tablesTabSheet" width="100%">
            <tab id="general" caption="msg://general" spacing="true">
                <scrollBox margin="true" id="fieldsScrollBox" height="100%" width="100%" spacing="true">
                    <vbox id="contentPane" spacing="true"/>
                    <vbox id="runtimePane" spacing="true"/>
                </scrollBox>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>