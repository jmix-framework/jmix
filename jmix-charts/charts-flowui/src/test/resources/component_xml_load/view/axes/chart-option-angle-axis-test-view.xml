<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:charts="http://jmix.io/schema/charts/ui">
    <layout>
        <charts:chart id="angleAxisChartId">
            <charts:angleAxis
                    id="angleAxis"
                    polarIndex="0"
                    startAngle="0"
                    clockwise="false"
                    type="VALUE"
                    nonCategoryBoundaryGap="0 10"
                    min="0"
                    max="100"
                    scale="false"
                    splitNumber="5"
                    minInterval="1"
                    maxInterval="10"
                    interval="0"
                    logBase="10"
                    silent="true"
                    triggerEvent="true"
                    animation="true"
                    animationThreshold="1000"
                    animationDuration="1000"
                    animationEasing="cubicOut"
                    animationDelay="0"
                    animationEasingUpdate="cubicOut"
                    animationDurationUpdate="300"
                    animationDelayUpdate="0"
                    zLevel="0"
                    z="0">
                <charts:splitArea
                        show="true"
                        interval="5">
                    <charts:areaStyle
                            shadowOffsetY="0"
                            shadowOffsetX="0"
                            shadowColor="BLACK"
                            shadowBlur="1"
                            opacity="0.9"
                            colors="BLACK WHITE"/>
                </charts:splitArea>

                <charts:splitLine
                        interval="0"
                        show="false">
                    <charts:lineStyle
                            color="#000000"
                            width="1"
                            shadowBlur="0"
                            type="dashed"
                            miterLimit="0"
                            shadowColor="BLACK"
                            opacity="0.9"
                            cap="ROUND"
                            join="ROUND"
                            shadowOffsetX="0"
                            shadowOffsetY="0"/>
                </charts:splitLine>

                <charts:axisLine
                        show="false"
                        symbols="none arrow"
                        symbolsSize="5 10"
                        symbolsOffset="0 5"
                        onZero="true"
                        onZeroAxisIndex="0"/>
                <charts:axisTick
                        show="true"
                        alignWithLabel="true"
                        interval="5"
                        inside="true"
                        length="10">
                    <charts:lineStyle
                            color="#000000"
                            width="1"
                            type="solid"
                            dashOffset="0"
                            shadowBlur="0"
                            miterLimit="0"
                            shadowColor="BLACK"
                            opacity="0.9"
                            cap="ROUND"
                            join="ROUND"
                            shadowOffsetX="0"
                            shadowOffsetY="0"/>
                </charts:axisTick>

                <charts:axisLabel
                        show="true"
                        inside="true"
                        interval="5"
                        align="CENTER"
                        verticalAlign="MIDDLE"
                        borderDashOffset="0"
                        borderRadius="5"
                        borderType="solid"
                        padding="0 5"
                        backgroundColor="WHITE"
                        borderColor="BLACK"
                        borderWidth="1"
                        shadowBlur="1"
                        shadowColor="BLACK"
                        shadowOffsetX="0"
                        shadowOffsetY="0"
                        height="100"
                        width="200"
                        overflow="BREAK"
                        textShadowOffsetY="0"
                        textShadowOffsetX="0"
                        textShadowBlur="1"
                        textShadowColor="BLACK"
                        textBorderDashOffset="0"
                        textBorderType="dashed"
                        textBorderWidth="1"
                        textBorderColor="BLACK"
                        lineHeight="10"
                        fontSize="12"
                        fontFamily="sans-serif"
                        fontWeight="500"
                        fontStyle="ITALIC"
                        color="BLACK"
                        rotate="5"
                        formatter="Line Y"
                        ellipsis=".."
                        hideOverlap="true"
                        margin="0"
                        showMaxLabel="true"
                        showMinLabel="false"/>
            </charts:angleAxis>
        </charts:chart>
    </layout>
</view>