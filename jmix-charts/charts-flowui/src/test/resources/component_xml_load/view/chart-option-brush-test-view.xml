<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:charts="http://jmix.io/schema/charts/ui">
    <layout>
        <charts:chart id="brushChartId">
            <charts:brush
                    id="brush"
                    toolboxes="RECT"
                    seriesIndex="ALL"
                    geoIndex="10"
                    xAxisIndexes="0 5 10"
                    yAxisIndexes="0 5 10"
                    brushType="RECT"
                    brushMode="SINGLE"
                    brushLinkIndexes="5, 5"
                    transformable="true"
                    throttleDelay="100"
                    throttleType="DEBOUNCE"
                    removeOnClick="true"
                    z="0">
                <charts:brushStyle
                        color="BLACK"
                        borderWidth="1"
                        borderColor="WHITE"/>
                <charts:inBrush
                        color="BLACK"
                        opacity="0.4 0.9"
                        colorAlpha="0.4 0.4"
                        colorHue="0.6 0.6"
                        colorLightness="0.5 0.5"
                        colorSaturation="0.8 0.8"
                        symbol="some"
                        symbolSize="5 10"/>
                <charts:outOfBrush
                        color="BLACK"
                        opacity="0.4 0.9"
                        colorAlpha="0.4 0.4"
                        colorHue="0.6 0.6"
                        colorLightness="0.5 0.5"
                        colorSaturation="0.8 0.8"
                        symbol="some"
                        symbolSize="5 10"/>
            </charts:brush>
        </charts:chart>
    </layout>
</view>