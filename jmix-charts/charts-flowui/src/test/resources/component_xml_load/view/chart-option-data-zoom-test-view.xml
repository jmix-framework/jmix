<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:charts="http://jmix.io/schema/charts/ui">
    <layout>
        <charts:chart id="dataZoomChartId">
            <charts:dataZoom>
                <charts:insideDataZoom
                        id="insideDataZoom"
                        disabled="false"
                        xAxisIndexes="0 10"
                        yAxisIndexes="0 10"
                        radiusAxisIndexes="0 10"
                        angleAxisIndexes="0 1"
                        filterMode="EMPTY"
                        start="0"
                        end="100.1"
                        startValue="0"
                        endValue="100"
                        minSpan="0"
                        maxSpan="100"
                        minValueSpan="0"
                        maxValueSpan="1000"
                        orientation="HORIZONTAL"
                        zoomLock="false"
                        throttle="100"
                        rangeMode="VALUE PERCENT"
                        zoomOnMouseWheel="false"
                        moveOnMouseMove="false"
                        moveOnMouseWheel="false"
                        preventDefaultMouseMove="false"/>
                <charts:sliderDataZoom
                        zoomLock="false"
                        yAxisIndexes="0 10"
                        xAxisIndexes="0 10"
                        throttle="100"
                        startValue="0"
                        start="0"
                        rangeMode="VALUE PERCENT"
                        radiusAxisIndexes="0 10"
                        minValueSpan="0"
                        minSpan="0"
                        maxValueSpan="100"
                        maxSpan="100"
                        filterMode="FILTER"
                        endValue="100"
                        end="100"
                        angleAxisIndexes="0 10"
                        orientation="HORIZONTAL"
                        id="slider"
                        zLevel="0"
                        z="0"
                        show="false"
                        width="200"
                        height="100"
                        borderColor="BLACK"
                        backgroundColor="WHITE"
                        borderRadius="10"
                        bottom="0"
                        right="0"
                        left="0"
                        top="0"
                        brushSelect="false"
                        fillerColor="GRAY"
                        handleIcon="0"
                        handleSize="10"
                        labelFormatter="Slide"
                        labelPrecision="10"
                        moveHandleIcon="0"
                        moveHandleSize="10"
                        realtime="false"
                        showDataShadow="false"
                        showDetail="false">
                    <charts:brushStyle
                            borderColor="WHITE"
                            shadowOffsetY="0"
                            color="BLACK"
                            shadowOffsetX="0"
                            shadowColor="BLACK"
                            shadowBlur="1"
                            opacity="0.9"
                            borderWidth="1"
                            borderType="dashed"
                            borderDashOffset="0"
                            join="ROUND"
                            cap="BUTT"
                            miterLimit="0"/>
                    <charts:emphasis>
                        <charts:handleStyle
                                miterLimit="100"
                                cap="BUTT"
                                join="ROUND"
                                borderDashOffset="0"
                                borderType="dashed"
                                borderWidth="1"
                                opacity="0.9"
                                shadowBlur="1"
                                shadowColor="BLACK"
                                shadowOffsetX="0"
                                color="BLACK"
                                shadowOffsetY="0"
                                borderColor="BLACK"/>
                        <charts:moveHandleStyle
                                borderColor="BLACK"
                                shadowOffsetY="0"
                                color="BLACK"
                                shadowOffsetX="0"
                                shadowColor="BLACK"
                                shadowBlur="1"
                                opacity="0.9"
                                borderWidth="1"
                                borderType="dashed"
                                borderDashOffset="0"
                                join="ROUND"
                                cap="ROUND"
                                miterLimit="10"/>
                    </charts:emphasis>

                    <charts:textStyle
                            color="BLACK"
                            fontStyle="ITALIC"
                            fontWeight="bolder"
                            fontFamily="monospace"
                            fontSize="15"
                            lineHeight="13"
                            width="150"
                            height="250"
                            textBorderColor="BISQUE"
                            textBorderWidth="123"
                            textBorderType="dashed"
                            textBorderDashOffset="2"
                            textShadowColor="DEEPPINK"
                            textShadowBlur="12"
                            textShadowOffsetX="42"
                            textShadowOffsetY="42"
                            overflow="BREAK_ALL"
                            ellipsis="......"/>
                </charts:sliderDataZoom>
            </charts:dataZoom>
        </charts:chart>
    </layout>
</view>