<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:charts="http://jmix.io/schema/charts/ui">
    <layout>
        <charts:chart id="gridChartId">
            <charts:grid>
                <charts:gridItem
                        id="grid"
                        show="true"
                        zLevel="0"
                        z="0"
                        left="0"
                        top="0"
                        right="0"
                        bottom="0"
                        width="200"
                        height="100"
                        containLabel="true"
                        backgroundColor="WHITE"
                        borderColor="BLACK"
                        borderWidth="200"
                        shadowBlur="5"
                        shadowColor="BLACK"
                        shadowOffsetX="5"
                        shadowOffsetY="5">
                    <charts:tooltip padding="0"/>
                </charts:gridItem>
            </charts:grid>
        </charts:chart>
    </layout>
</view>