<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:charts="http://jmix.io/schema/charts/ui">
    <layout>
        <charts:chart id="titleChartId">
            <charts:title id="title"
                          show="false"
                          text="Title text"
                          link="someLink"
                          target="BLANK"
                          subtext="Title subtext"
                          sublink="someLink"
                          subtarget="BLANK"
                          textAlign="AUTO"
                          textVerticalAlign="AUTO"
                          triggerEvent="false"
                          padding="1 3"
                          itemGap="2"
                          zLevel="3"
                          z="1"
                          left="50%"
                          top="50%"
                          right="50%"
                          bottom="10%"
                          backgroundColor="DEEPPINK"
                          borderColor="DARKTURQUOISE"
                          borderRadius="4"
                          borderWidth="5"
                          shadowBlur="13"
                          shadowColor="DARKVIOLET"
                          shadowOffsetX="4"
                          shadowOffsetY="5">
                <charts:textStyle
                        color="DARKSLATEGREY"
                        ellipsis="...."
                        fontFamily="monospace"
                        fontSize="4"
                        fontStyle="ITALIC"
                        fontWeight="bolder"
                        height="12"
                        lineHeight="5"
                        overflow="BREAK_ALL"
                        textBorderColor="DARKSLATEGREY"
                        textBorderDashOffset="3"
                        textBorderType="dashed"
                        textBorderWidth="1"
                        textShadowBlur="3"
                        textShadowColor="DARKSLATEGRAY"
                        textShadowOffsetX="1"
                        textShadowOffsetY="1"
                        width="5">
                    <charts:rich>
                        <charts:richStyle name="testStyle"
                                          align="CENTER"
                                          backgroundColor="DEEPPINK"
                                          borderColor="DIMGREY"
                                          borderDashOffset="2"
                                          borderRadius="3"
                                          borderType="dashed"
                                          borderWidth="12"
                                          color="DIMGRAY"
                                          fontFamily="monospace"
                                          fontSize="3"
                                          fontStyle="ITALIC"
                                          fontWeight="bolder"
                                          height="15"
                                          lineHeight="12"
                                          padding="1, 4, 5, 6"/>
                        <charts:richStyle name="secondTestStyle"
                                          padding="1 4 5 6"
                                          shadowBlur="12"
                                          shadowColor="DIMGRAY"
                                          shadowOffsetX="4"
                                          shadowOffsetY="1"
                                          textBorderColor="DEEPSKYBLUE"
                                          textBorderDashOffset="3"
                                          textBorderType="dashed"
                                          textBorderWidth="2"
                                          textShadowBlur="1"
                                          textShadowColor="DARKTURQUOISE"
                                          textShadowOffsetX="1"
                                          textShadowOffsetY="1"
                                          verticalAlign="BOTTOM"
                                          width="4"/>
                    </charts:rich>
                </charts:textStyle>
                <charts:subtextStyle
                        align="CENTER"
                        color="DARKSLATEGREY"
                        ellipsis="...."
                        fontFamily="monospace"
                        fontSize="4"
                        fontStyle="ITALIC"
                        fontWeight="bolder"
                        height="12"
                        lineHeight="5"
                        overflow="BREAK_ALL"
                        textBorderColor="DARKSLATEGREY"
                        textBorderDashOffset="3"
                        textBorderType="dashed"
                        textBorderWidth="1"
                        textShadowBlur="3"
                        textShadowColor="DARKSLATEGRAY"
                        textShadowOffsetX="1"
                        textShadowOffsetY="1"
                        verticalAlign="BOTTOM"
                        width="5"/>
            </charts:title>
        </charts:chart>
    </layout>
</view>