<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:charts="http://jmix.io/schema/charts/ui">
    <layout>
        <charts:chart id="visualMapChartId">
            <charts:visualMap>
                <charts:continuousVisualMap
                        id="continuousVisualMap"
                        min="0"
                        max="100"
                        range="10 100"
                        calculable="true"
                        realtime="true"
                        inverse="true"
                        precision="1"
                        itemWidth="10"
                        itemHeight="10"
                        align="AUTO"
                        text="Start End"
                        textGap="10"
                        show="true"
                        dimension="1"
                        seriesIndex="0 1"
                        hoverLink="true"
                        zLevel="10"
                        z="1200"
                        left="0"
                        top="0"
                        right="0"
                        bottom="0"
                        orientation="VERTICAL"
                        padding="0 5"
                        backgroundColor="WHITE"
                        borderColor="BLACK"
                        borderWidth="2"
                        formatter="Continuous Visual Map"
                        handleIcon="none"
                        handleSize="50"
                        indicatorIcon="none"
                        indicatorSize="10">
                    <charts:handleStyle
                            miterLimit="100"
                            cap="BUTT"
                            join="ROUND"
                            borderDashOffset="0"
                            borderType="dashed"
                            borderWidth="1"
                            opacity="0.9"
                            shadowBlur="1"
                            shadowColor="BLACK"
                            shadowOffsetX="0"
                            color="BLACK"
                            shadowOffsetY="0"
                            borderColor="BLACK"/>
                    <charts:indicatorStyle
                            miterLimit="100"
                            cap="BUTT"
                            join="ROUND"
                            borderDashOffset="0"
                            borderType="dashed"
                            borderWidth="1"
                            opacity="0.9"
                            shadowBlur="1"
                            shadowColor="BLACK"
                            shadowOffsetX="0"
                            color="BLACK"
                            shadowOffsetY="0"
                            borderColor="BLACK"/>
                    <charts:inRange
                            opacity="0.9 1"
                            color="BLACK"
                            colorAlpha="0.4 0.4"
                            colorHue="0.6 0.6"
                            colorLightness="0.5 0.5"
                            colorSaturation="0.8 0.8"
                            symbol="some"
                            symbolSize="5 10"/>
                    <charts:outRange
                            opacity="0.9 1"
                            color="BLACK"
                            colorAlpha="0.4 0.4"
                            colorHue="0.6 0.6"
                            colorLightness="0.5 0.5"
                            colorSaturation="0.8 0.8"
                            symbol="some"
                            symbolSize="10"/>
                    <charts:textStyle
                            color="BLACK"
                            fontStyle="ITALIC"
                            fontWeight="bolder"
                            fontFamily="monospace"
                            fontSize="15"
                            lineHeight="13"
                            width="150"
                            height="250"
                            textBorderColor="BISQUE"
                            textBorderWidth="123"
                            textBorderType="dashed"
                            textBorderDashOffset="2"
                            textShadowColor="DEEPPINK"
                            textShadowBlur="12"
                            textShadowOffsetX="42"
                            textShadowOffsetY="42"
                            overflow="BREAK_ALL"
                            ellipsis="......"/>
                </charts:continuousVisualMap>
                <charts:piecewiseVisualMap
                        id="piecewiseVisualMap"
                        splitNumber="1"
                        categories="Apple Pie Banana"
                        min="0"
                        max="100"
                        minOpen="true"
                        maxOpen="true"
                        selectedMode="MULTIPLE"
                        inverse="true"
                        precision="1"
                        itemWidth="10"
                        itemHeight="10"
                        align="AUTO"
                        text="Start End"
                        textGap="10"
                        showLabel="false"
                        itemGap="5"
                        itemSymbol="CIRCLE"
                        show="true"
                        dimension="1"
                        seriesIndex="0 1"
                        hoverLink="true"
                        zLevel="10"
                        z="1200"
                        left="0"
                        top="0"
                        right="0"
                        bottom="0"
                        orientation="HORIZONTAL"
                        padding="0"
                        backgroundColor="WHITE"
                        borderWidth="2"
                        borderColor="BLACK"
                        formatter="Piecewise Visual Map">
                    <charts:inRange
                            opacity="0.9 1"
                            color="BLACK"
                            colorAlpha="0.1 0.4"
                            colorHue="0.6 0.6"
                            colorLightness="0.5 0.5"
                            colorSaturation="0.8 0.8"
                            symbol="some"
                            symbolSize="5 10"/>
                    <charts:outRange
                            opacity="0.9 1"
                            color="BLACK"
                            colorAlpha="0.4 0.8"
                            colorHue="0.6 0.6"
                            colorLightness="0.5 0.5"
                            colorSaturation="0.8 0.8"
                            symbol="some"
                            symbolSize="10"/>
                    <charts:textStyle
                            color="BLACK"
                            fontStyle="ITALIC"
                            fontWeight="bolder"
                            fontFamily="monospace"
                            fontSize="15"
                            lineHeight="13"
                            width="150"
                            height="250"
                            textBorderColor="BISQUE"
                            textBorderWidth="123"
                            textBorderType="dashed"
                            textBorderDashOffset="2"
                            textShadowColor="DEEPPINK"
                            textShadowBlur="12"
                            textShadowOffsetX="42"
                            textShadowOffsetY="42"
                            overflow="BREAK_ALL"
                            ellipsis="......"/>
                </charts:piecewiseVisualMap>
            </charts:visualMap>
        </charts:chart>
    </layout>
</view>