                            show="true"
                            roundCap="false">
                        <charts:lineStyle
                                width="10"
                                shadowBlur="0"
                                shadowColor="BLACK"
                                shadowOffsetX="0"
                                shadowOffsetY="0"
                                opacity="0.9">
                            <charts:colorPalette>
                                <charts:colorItem range="0.1" color="RED"/>
                                <charts:colorItem range="0.2" color="GREEN"/>
                                <charts:colorItem range="0.3" color="BLUE"/>
                                <charts:colorItem range="1.0" color="BLACK"/>
                            </charts:colorPalette>
                        </charts:lineStyle>
                    </charts:axisLine>
                    <charts:progress
                            show="true"
                            overlap="true"
                            width="10"
                            roundCap="false"
                            clip="false">
                        <charts:itemStyle
                                borderWidth="1"
                                shadowColor="BLACK"
                                shadowBlur="1"
                                shadowOffsetX="0"
                                shadowOffsetY="0"
                                opacity="0.9"
