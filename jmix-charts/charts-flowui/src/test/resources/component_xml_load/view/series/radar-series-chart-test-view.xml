                                borderType="solid"
                                borderDashOffset="0"
                                borderRadius="0"
                                padding="0"
                                shadowColor="BLACK"
                                shadowBlur="0"
                                shadowOffsetX="0"
                                shadowOffsetY="0"
                                width="200"
                                height="100"
                                textBorderColor="BLACK"
                                textBorderWidth="1"
                                textBorderType="solid"
                                textBorderDashOffset="0"
                                textShadowColor="BLACK"
                                textShadowBlur="0"
                                textShadowOffsetX="0"
                                textShadowOffsetY="0"
                                overflow="NONE"
                                ellipsis=".."/>
                        <charts:lineStyle
                                color="BLACK"
                                width="0"
