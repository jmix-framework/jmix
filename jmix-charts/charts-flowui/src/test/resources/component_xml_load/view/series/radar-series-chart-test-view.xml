                                borderRadius="0"
                                padding="0"
                                shadowColor="BLACK"
                                shadowBlur="0"
                                shadowOffsetX="0"
                                shadowOffsetY="0"
                                width="200"
                                height="100"
                                textBorderColor="BLACK"
                                textBorderWidth="1"
                                textBorderType="solid"
                                textBorderDashOffset="0"
                                textShadowColor="BLACK"
                                textShadowBlur="0"
                                textShadowOffsetX="0"
                                textShadowOffsetY="0"
                                overflow="NONE"
                                ellipsis=".."/>
                        <charts:lineStyle
                                color="BLACK"
                                width="0"
                                type="solid"
                                dashOffset="0"
                                cap="BUTT"
                                join="BEVEL"
                                miterLimit="10"
                                shadowBlur="10"
                                shadowColor="BLACK"
                                shadowOffsetX="0"
                                shadowOffsetY="0"
                                opacity="0.9"/>
                        <charts:areaStyle
                                color="BLACK"
                                shadowBlur="1"
                                shadowColor="BLACK"
                                shadowOffsetX="0"
                                shadowOffsetY="0"
                                opacity="0.9"/>
                    </charts:emphasis>
                    <charts:blur>
                        <charts:itemStyle
                                color="WHITE"
                                borderColor="BLACK"
                                borderWidth="1"
                                shadowColor="BLACK"
                                borderType="inherit"
                                shadowBlur="1"
                                shadowOffsetX="0"
                                shadowOffsetY="0"
                                opacity="0.9"/>
                        <charts:label
                                show="false"
                                position="TOP"
                                distance="5"
