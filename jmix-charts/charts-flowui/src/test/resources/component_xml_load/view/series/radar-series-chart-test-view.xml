                                color="BLACK"
                                shadowBlur="1"
                                shadowColor="BLACK"
                                shadowOffsetX="0"
                                shadowOffsetY="0"
                                opacity="0.9"/>
                    </charts:select>
                    <charts:tooltip
                            valueFormatter="Radar Chart Tooltip"
                            positionCoordinates="0 0"
                            extraCssText="box-shadow: 0 0 3px rgba(0, 0, 0, 0.3);"
                            position="INSIDE"
                            borderWidth="1"
                            borderColor="BLACK"
                            backgroundColor="WHITE"
                            formatter="Toolbox Tooltip"
                            padding="0">
                        <charts:textStyle
                                color="BLACK"
                                fontStyle="ITALIC"
                                fontWeight="bolder"
                                fontFamily="monospace"
                                fontSize="15"
                                lineHeight="13"
                                width="150"
                                height="250"
                                textBorderColor="BISQUE"
                                textBorderWidth="123"
                                textBorderType="dashed"
                                textBorderDashOffset="2"
                                textShadowColor="DEEPPINK"
                                textShadowBlur="12"
                                textShadowOffsetX="42"
                                textShadowOffsetY="42"
