<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:charts="http://jmix.io/schema/charts/ui">
    <layout>
        <charts:chart id="radarSeriesChartId">
            <charts:xAxes>
                <charts:xAxis/>
            </charts:xAxes>
            <charts:yAxes>
                <charts:yAxis/>
            </charts:yAxes>

            <charts:tooltip trigger="AXIS"/>
            <charts:dataZoom>
                <charts:sliderDataZoom orientation="HORIZONTAL"/>
                <charts:sliderDataZoom orientation="VERTICAL" left="5%"/>
                <charts:insideDataZoom/>
            </charts:dataZoom>
            <charts:toolbox>
                <charts:features>
                    <charts:dataZoom>
                        <charts:title back="Reset"/>
                    </charts:dataZoom>
                </charts:features>
            </charts:toolbox>

            <charts:series>
                <charts:radar
                        id="radar"
                        name="radar"
                        colorBy="DATA"
                        radarIndex="0"
                        symbol="CIRCLE"
                        symbolSize="10"
                        symbolType="CIRCLE"
                        symbolRotate="0"
                        symbolKeepAspect="false"
                        symbolOffset="0 0"
                        selectedMode="SINGLE"
                        dataGroupId="dataGroupId"
                        zLevel="0"
                        z="2"
                        silent="true"
                        animation="true"
                        animationThreshold="2000"
                        animationDuration="1000"
                        animationEasing="linear"
                        animationDelay="0"
                        animationDurationUpdate="300"
                        animationEasingUpdate="cubicOut"
                        animationDelayUpdate="0">
                    <charts:label
                            show="false"
                            position="TOP"
                            distance="5"
                            rotate="0"
                            offset="0 5"
                            formatter="Line"
                            color="WHITE"
                            fontStyle="NORMAL"
                            fontWeight="normal"
                            fontFamily="sans-serif"
                            fontSize="12"
                            align="CENTER"
                            verticalAlign="MIDDLE"
                            lineHeight="14"
                            backgroundColor="BLACK"
                            borderColor="BLACK"
                            borderWidth="0"
                            borderType="solid"
                            borderDashOffset="0"
                            borderRadius="0"
                            padding="0"
                            shadowColor="BLACK"
                            shadowBlur="0"
                            shadowOffsetX="0"
                            shadowOffsetY="0"
                            width="200"
                            height="100"
                            textBorderColor="BLACK"
                            textBorderWidth="1"
                            textBorderType="solid"
                            textBorderDashOffset="0"
                            textShadowColor="BLACK"
                            textShadowBlur="0"
                            textShadowOffsetX="0"
                            textShadowOffsetY="0"
                            overflow="NONE"
                            ellipsis="..">
                        <charts:rich>
                            <charts:richStyle
                                    name="radarRichStyle"
                                    color="WHITE"
                                    fontStyle="NORMAL"
                                    fontWeight="'normal'"
                                    fontFamily="'sans-serif'"
                                    fontSize="12"
                                    align="CENTER"
                                    verticalAlign="MIDDLE"
                                    lineHeight="10"
                                    backgroundColor="transparent"
                                    borderColor=""
                                    borderWidth="0"
                                    borderType="solid"
                                    borderDashOffset="0"
                                    borderRadius="0"
                                    padding="0"
                                    shadowColor="transparent"
                                    shadowBlur="0"
                                    shadowOffsetX="0"
                                    shadowOffsetY="0"
                                    width="100"
                                    height="100"
                                    textBorderColor="BLACK"
                                    textBorderWidth="1"
                                    textBorderType="solid"
                                    textBorderDashOffset="0"
                                    textShadowColor="transparent"
                                    textShadowBlur="0"
                                    textShadowOffsetX="0"
                                    textShadowOffsetY="0"/>
                        </charts:rich>
                    </charts:label>
                    <charts:labelLayout
                            hideOverlap="true"
                            moveOverlap="SHIFT_X"
                            x="0"
                            y="0"
                            dx="0"
                            dy="0"
                            rotate="0"
                            width="100"
                            height="100"
                            align="CENTER"
                            verticalAlign="MIDDLE"
                            fontSize="12"
                            draggable="true"
                            labelLinePoints="5, 10, 5, 10, 5, 10"/>
                    <charts:itemStyle
                            color="WHITE"
                            borderColor="BLACK"
                            borderWidth="1"
                            shadowColor="BLACK"
                            borderType="inherit"
                            shadowBlur="1"
                            shadowOffsetX="0"
                            shadowOffsetY="0"
                            opacity="0.9">
                    </charts:itemStyle>
                    <charts:lineStyle
                            color="BLACK"
                            width="0"
                            type="solid"
                            dashOffset="0"
                            cap="BUTT"
                            join="BEVEL"
                            miterLimit="10"
                            shadowBlur="10"
                            shadowColor="BLACK"
                            shadowOffsetX="0"
                            shadowOffsetY="0"
                            opacity="0.9"/>
                    <charts:areaStyle
                            color="BLACK"
                            shadowBlur="1"
                            shadowColor="BLACK"
                            shadowOffsetX="0"
                            shadowOffsetY="0"
                            opacity="0.9"/>
