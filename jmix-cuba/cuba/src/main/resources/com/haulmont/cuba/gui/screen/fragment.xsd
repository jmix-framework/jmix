<xs:schema targetNamespace="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd"
           xmlns:data="http://jmix.io/schema/ui/data"
           xmlns:layout="http://schemas.haulmont.com/cuba/screen/layout.xsd"
           elementFormDefault="qualified">

    <xs:include schemaLocation="http://jmix.io/schema/ui/data"/>
    <xs:include schemaLocation="http://schemas.haulmont.com/cuba/screen/layout.xsd"/>

    <!-- Fragment -->
    <xs:element name="fragment">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="data" type="data:screenData" minOccurs="0"/>

                <xs:element name="actions" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:choice maxOccurs="unbounded">
                                <xs:element name="action" type="layout:frameAction"/>
                            </xs:choice>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="facets" minOccurs="0" type="layout:facets"/>

                <xs:element name="layout">
                    <xs:complexType>
                        <xs:complexContent>
                            <xs:extension base="layout:rootLayout">
                                <xs:attributeGroup ref="layout:hasVisibility"/>
                                <xs:attributeGroup ref="layout:hasEnableProp"/>
                            </xs:extension>
                        </xs:complexContent>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>

            <xs:attribute name="extends" type="xs:string"/>
            <xs:attribute name="messagesPack" type="xs:string"/>

            <xs:attribute name="icon" type="xs:string"/>
            <xs:attribute name="caption" type="layout:resourceString"/>
            <xs:attribute name="description" type="layout:resourceString"/>
        </xs:complexType>
    </xs:element>
</xs:schema>