<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">

    <data>
        <instance id="orderDc"
                  class="com.haulmont.cuba.core.model.sales.Order">
            <loader/>
            <collection id="orderLinesDc" property="orderLines"/>
        </instance>
        <collection id="allOrderLinesDc"
                    class="com.haulmont.cuba.core.model.sales.OrderLine">
            <loader/>
        </collection>

        <instance id="orderLineDc"
                  class="com.haulmont.cuba.core.model.sales.OrderLine">
            <instance id="productDc" property="product"/>
            <loader/>
        </instance>
        <collection id="allProductsDc"
                    class="com.haulmont.cuba.core.model.sales.Product">
            <loader/>
        </collection>

        <instance id="catalogDc"
                  class="com.haulmont.cuba.core.model.sales.Catalog">
            <loader/>
        </instance>
    </data>

    <layout>
        <optionsGroup id="optionsGroup"
                      dataContainer="orderDc" property="orderLines"
                      optionsContainer="allOrderLinesDc"
                      multiselect="true"/>

        <optionsGroup id="singleOptionGroup"
                      dataContainer="orderLineDc" property="product"
                      optionsContainer="allProductsDc"
                      multiselect="false"/>

        <optionsGroup id="setOptionsGroup"
                      dataContainer="catalogDc" property="products"
                      optionsContainer="allProductsDc"
                      multiselect="true"/>
    </layout>
</window>
