<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <actions>
        <action id="action"/>
    </actions>
    <facets>
        <screen id="screenIdFacet"
                screenId="test_ScreenToOpenWithFacet"
                openMode="NEW_TAB"
                onAction="action">
        </screen>

        <screen id="screenClassFacet"
                screenClass="spec.haulmont.cuba.web.facets.screen.screens.ScreenToOpenWithFacet"
                openMode="DIALOG"
                onButton="button"/>
    </facets>
    <layout>
        <button id="button"/>
        <label id="label"/>
    </layout>
</window>