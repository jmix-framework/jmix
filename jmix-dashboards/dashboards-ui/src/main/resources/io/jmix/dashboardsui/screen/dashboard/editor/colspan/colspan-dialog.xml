<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://caption">
    <dialogMode height="AUTO"
                width="480"/>
    <layout expand="btnPanel"
            spacing="true"
            width="100%">
        <hbox width="480px" spacing="true">
            <label id="leftLabel"
                   width="100%"
                   htmlEnabled="true"/>
            <label id="rightLabel"
                   width="100%"
                   htmlEnabled="true"/>
        </hbox>
        <hbox id="sliderBox"
              height="100%"
              spacing="true"
              width="100%">
            <slider id="colSpanSlider" width="100%" min="1" resolution="0" datatype="int"/>
            <slider id="rowSpanSlider" width="100%" min="1" resolution="0" datatype="int"/>
        </hbox>
        <buttonsPanel id="btnPanel">
            <button id="okBtn"
                    caption="msg:///ok"
                    icon="OK"/>
            <button id="cancelBtn"
                    caption="msg:///cancel"
                    icon="CANCEL"/>
        </buttonsPanel>
    </layout>
</window>
