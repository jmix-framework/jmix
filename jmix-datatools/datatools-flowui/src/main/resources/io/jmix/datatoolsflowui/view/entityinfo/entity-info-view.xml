<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://entityInfo.title"
      focusComponent="infoDataGrid">
    <data>
        <collection id="infoDc"
                    class="io.jmix.datatoolsflowui.view.entityinfo.model.InfoValue"/>
    </data>
    <layout>
        <dataGrid id="infoDataGrid"
                  dataContainer="infoDc"
                  columnReorderingAllowed="false"
                  width="100%"
                  height="15.5em">
            <columns>
                <column property="key"/>
                <column property="value"/>
            </columns>
        </dataGrid>
    </layout>
</view>
