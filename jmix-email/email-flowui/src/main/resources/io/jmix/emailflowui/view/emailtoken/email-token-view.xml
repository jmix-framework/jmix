<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://emailTokenView.title">
    <data>
        <instance id="refreshTokenDc" class="io.jmix.email.entity.RefreshToken">
            <loader id="refreshTokenDl">
                <query>
                    <![CDATA[select e from email_RefreshToken e  ]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </instance>
    </data>

    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="updateRefreshTokenAction" text="msg://updateRefreshTokenAction.text"/>
    </actions>
    <layout>
        <vbox width="60em">
            <passwordField id="refreshTokenValueField" dataContainer="refreshTokenDc" property="tokenValue"
                           label="msg://refreshTokenValueField.label"
                           clearButtonVisible="false" readOnly="true"
                           width="100%"/>
            <textField id="lastModifiedDateField" dataContainer="refreshTokenDc" property="lastModifiedDate"
                       label="msg://io.jmix.email.entity/RefreshToken.lastModifiedDate"
                       readOnly="true" width="13em"/>
            <button id="updateRefreshTokenButton" action="updateRefreshTokenAction"/>
        </vbox>
    </layout>
</view>