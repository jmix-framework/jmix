<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://administrativeView.title">

    <data>
        <instance id="defaultRefreshTokenDc" class="io.jmix.email.entity.RefreshToken">
            <loader id="defaultRefreshTokenDl">
                <query>
                    <![CDATA[select e from email_RefreshToken e  ]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </instance>
    </data>

    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="updateDefaultRefreshTokenAction" text="Update default refresh token"/>
    </actions>
    <layout>
        <details id="oauthDetailsGroup" summaryText="Refresh Token" opened="true">
            <vbox><!-- TODO adjust size of fields-->
                <passwordField id="defaultRefreshTokenValueField" dataContainer="defaultRefreshTokenDc" property="tokenValue"
                               label="msg://defaultRefreshTokenValueField.label"
                               clearButtonVisible="false" readOnly="true"/>
                <textField id="lastModifiedDateField" dataContainer="defaultRefreshTokenDc" property="lastModifiedDate"
                           label="Last modified date" readOnly="true"/>
                <button id="updateDefaultRefreshTokenButton" action="updateDefaultRefreshTokenAction" text="Update"/>
            </vbox>
        </details>
    </layout>
</view>