<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="foldersDc"
                    class="test_support.entity.Folder">
            <fetchPlan extends="_local"/>
            <loader/>
        </collection>
    </data>
    <facets>
        <settings id="facet" auto="true"/>
    </facets>
    <layout>
        <treeDataGrid id="foldersDataGrid"
                      hierarchyProperty="parent"
                      hierarchyColumn="name"
                      width="100%"
                      multiSort="true"
                      dataContainer="foldersDc">
            <columns>
                <column property="name" sortable="true"/>
                <column property="size" sortable="true"/>
                <column property="parent" sortable="true"/>
            </columns>
        </treeDataGrid>
    </layout>
</view>