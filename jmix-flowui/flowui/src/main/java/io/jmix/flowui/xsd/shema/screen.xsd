<xs:schema targetNamespace="http://jmix.io/schema/flowui/screen"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="http://jmix.io/schema/flowui/screen"
           xmlns:data="http://jmix.io/schema/flowui/data"
           xmlns:layout="http://jmix.io/schema/flowui/layout"
           elementFormDefault="qualified">

    <xs:include schemaLocation="http://jmix.io/schema/flowui/data"/>
    <xs:include schemaLocation="http://jmix.io/schema/flowui/layout"/>

    <!-- Screen -->
    <xs:element name="screen">
        <xs:complexType>
            <xs:all>
                <xs:element name="data" type="data:screenData" minOccurs="0"/>

                <xs:element name="actions" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:choice maxOccurs="unbounded">
                                <xs:element name="action" type="layout:baseAction"/>
                            </xs:choice>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>

                <xs:element name="dialogMode" minOccurs="0" type="layout:dialogMode"/>

<!--                <xs:element name="facets" minOccurs="0" type="layout:facets"/>-->

                <xs:element name="layout">
                    <xs:complexType>
                        <xs:complexContent>
                            <xs:extension base="layout:rootLayout">
                                <xs:attribute name="minHeight" type="layout:componentSize"/>
                                <xs:attribute name="minWidth" type="layout:componentSize"/>

                                <xs:attribute name="maxHeight" type="layout:componentSize"/>
                                <xs:attribute name="maxWidth" type="layout:componentSize"/>
                            </xs:extension>
                        </xs:complexContent>
                    </xs:complexType>
                </xs:element>
            </xs:all>

<!--            <xs:attribute name="messagesGroup" type="xs:string"/>-->

<!--            <xs:attribute name="icon" type="xs:string"/>-->
<!--            <xs:attribute name="title" type="layout:resourceString"/>-->
<!--            <xs:attribute name="description" type="layout:resourceString"/>-->
<!--            <xs:attribute name="focusComponent" type="xs:string"/>-->
<!--            <xs:attribute name="focusMode" type="focusModeType"/>-->
        </xs:complexType>
    </xs:element>
</xs:schema>