<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://jmxConsoleView.title">
    <data>
        <collection id="mbeanDc" class="io.jmix.flowui.app.jmxconsole.model.ManagedBeanInfo">
            <loader id="mbeanDl"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox id="searchFieldHbox" width="100%">
            <textField id="mbeanSearchField" width="25em" placeholder="msg://mbeanSearchField.placeholder">
                <suffix>
                    <icon icon="SEARCH"/>
                </suffix>
            </textField>
            <button id="editBtn" action="mbeansDataGrid.edit"/>
        </hbox>
        <dataGrid id="mbeansDataGrid" dataContainer="mbeanDc">
            <actions>
                <action id="edit" type="list_edit" text="msg://inspectAction.text"/>
            </actions>
            <columns>
                <column property="domain"/>
                <column property="objectName"/>
                <column property="description"/>
            </columns>
        </dataGrid>
    </layout>
</view>