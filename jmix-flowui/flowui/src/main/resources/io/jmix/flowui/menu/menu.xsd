        <xs:attribute type="resourceString" name="description"/>
        <xs:attribute type="xs:string" name="className"/>
        <xs:attribute type="xs:string" name="icon"/>
        <xs:attributeGroup ref="insertGroup"/>
    </xs:complexType>

