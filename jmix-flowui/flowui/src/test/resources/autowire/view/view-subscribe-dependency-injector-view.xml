<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="collectionDc"
                    class="test_support.entity.sales.Customer">
            <loader id="collectionDl">
                <query>
                    <![CDATA[select e from test_Customer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="testAction"/>
    </actions>
    <facets>
        <dataLoadCoordinator id="facet" auto="false"/>
    </facets>
    <layout>
        <textField id="testComponent"/>
        <tabSheet id="testComponent2">
            <tab id="tab1">
                <span/>
            </tab>
            <tab id="tab2">
                <span/>
            </tab>
        </tabSheet>
        <entityPicker id="hasActionComponent" metaClass="test_Customer">
            <actions>
                <action id="testAction" icon="ABACUS"/>
            </actions>
        </entityPicker>
        <dropdownButton id="dropdownButton">
            <items>
                <componentItem id="componentItem">
                    <button id="button"/>
                </componentItem>
            </items>
        </dropdownButton>
        <userMenu id="userMenu">
            <items>
                <textItem id="textItem1" text="Text Item 1"/>
                <textItem id="textItem2" text="Text Item 2">
                    <items>
                        <textItem id="textItem3" text="Text Item 3"/>
                        <componentItem id="componentItem">
                            <div>
                                <button id="button" text="Button 1"/>
                            </div>
                        </componentItem>
                        <actionItem id="actionItem">
                            <action id="testAction"/>
                        </actionItem>
                    </items>
                </textItem>
            </items>
        </userMenu>
    </layout>
</view>