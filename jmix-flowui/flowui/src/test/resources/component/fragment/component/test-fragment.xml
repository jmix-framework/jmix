<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <content>
        <vbox id="wrapper">
            <tabSheet id="tabSheet">
                <tab id="tab1" label="Tab 1">
                    <span text="Tab 1 content"/>
                </tab>
                <tab id="tab2" label="Tab 2">
                    <span text="Tab 2 content"/>
                </tab>
            </tabSheet>

            <tabs id="tabs">
                <tab id="tab1" label="Tab 1"/>
                <tab id="tab2" label="Tab 2"/>
            </tabs>

            <accordion id="accordion">
                <accordionPanel id="accordionPanel1" summaryText="Panel 1">
                    <span text="Span 1"/>
                </accordionPanel>
                <accordionPanel id="accordionPanel2"  summaryText="Panel 2">
                    <span text="Span 2"/>
                </accordionPanel>
            </accordion>

            <dropdownButton id="dropdownButton">
                <items>
                    <componentItem id="componentItem">
                        <button id="button" text="Button 1"/>
                    </componentItem>

                    <textItem id="textItem"/>
                </items>
            </dropdownButton>

            <textField id="textField">
                <prefix>
                    <icon icon="QUESTION_CIRCLE"/>
                </prefix>
                <suffix>
                    <icon icon="PLUS"/>
                </suffix>
            </textField>
        </vbox>
    </content>
</fragment>