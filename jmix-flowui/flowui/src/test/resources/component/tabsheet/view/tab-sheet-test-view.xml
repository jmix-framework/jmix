<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <instance id="documentAttachmentDc"
                  class="test_support.entity.attachment.DocumentAttachment"
                  fetchPlan="_base">
        </instance>
    </data>
    <layout>
        <tabSheet id="tabSheet">
            <tab id="tab1" label="tab1">
                <span id="tab1Span"/>
            </tab>
            <tab id="tab2" label="tab2" lazy="true">
                <vbox>
                    <hbox>
                        <button id="tab2Button"/>
                    </hbox>
                </vbox>
            </tab>
            <tab id="tab3" label="tab3">
                <hbox>
                    <checkbox id="tab3Checkbox"/>
                </hbox>
            </tab>
            <tab id="tab4" label="tab4" lazy="true">
                <vbox>
                    <button id="tab4Button"/>
                    <span id="tab4Span"/>
                </vbox>
            </tab>
        </tabSheet>
    </layout>
</view>