<view xmlns="http://jmix.io/schema/flowui/view">
    <data readOnly="true">
        <instance id="orderDc"
                  class="test_support.entity.sales.Order">
            <fetchPlan extends="_base"/>
            <loader id="orderDl">
                <query>
                    <![CDATA[select e from test_Order e]]>
                </query>
            </loader>
        </instance>
    </data>
    <layout>
        <vbox id="vboxId"
              alignItems="STRETCH"
              boxSizing="BORDER_BOX"
              classNames="cssClassName1, cssClassName2"
              css="color: red;"
              enabled="true"
              expand="expanded"
              height="50px"
              justifyContent="AROUND"
              margin="true"
              maxHeight="55px"
              maxWidth="120px"
              minHeight="40px"
              minWidth="80px"
              padding="true"
              spacing="true"
              width="100px">
            <textField id="expanded"/>
            <button text="vboxChild"/>
            <checkbox id="selfAlignChild" alignSelf="END"/>
        </vbox>

        <hbox id="hboxId"
              alignItems="STRETCH"
              boxSizing="BORDER_BOX"
              classNames="cssClassName1, cssClassName2"
              css="color: red;"
              enabled="true"
              expand="expanded"
              height="50px"
              justifyContent="AROUND"
              margin="true"
              maxHeight="55px"
              maxWidth="120px"
              minHeight="40px"
              minWidth="80px"
              padding="true"
              spacing="true"
              width="100px">
            <textField id="expanded"/>
            <button text="hboxChild"/>
            <checkbox id="selfAlignChild" alignSelf="END"/>
        </hbox>

        <flexLayout id="flexLayoutId"
                    alignItems="STRETCH"
                    classNames="cssClassName1, cssClassName2"
                    contentAlignment="CENTER"
                    css="color: red;"
                    enabled="true"
                    expand="expanded"
                    flexDirection="COLUMN_REVERSE"
                    flexWrap="WRAP"
                    height="50px"
                    justifyContent="AROUND"
                    maxHeight="55px"
                    maxWidth="120px"
                    minHeight="40px"
                    minWidth="80px"
                    visible="true"
                    width="100px">
            <textField id="expanded"/>
            <button text="flexLayoutChild"/>
            <checkbox id="selfAlignChild" alignSelf="END"/>
        </flexLayout>

        <accordion id="accordionId"
                   classNames="cssClassName1, cssClassName2"
                   css="color: red;"
                   height="50px"
                   maxHeight="55px"
                   maxWidth="120px"
                   minHeight="40px"
                   minWidth="80px"
                   visible="true"
                   width="100px">
            <accordionPanel id="accordionPanelId"
                            classNames="cssClassName1, cssClassName2"
                            css="color: red;"
                            enabled="true"
                            height="50px"
                            maxHeight="55px"
                            maxWidth="120px"
                            minHeight="40px"
                            minWidth="80px"
                            summaryText="summaryTextString"
                            themeNames="small, reverse"
                            visible="true"
                            width="100px">
                <tooltip text="tooltipText"
                         focusDelay="1"
                         hideDelay="2"
                         hoverDelay="3"
                         manual="true"
                         opened="true"
                         position="BOTTOM"
                />
            </accordionPanel>
            <accordionPanel id="anotherAccordionPanelId"
                            classNames="cssClassName1, cssClassName2"
                            css="color: red;"
                            enabled="true"
                            height="50px"
                            maxHeight="55px"
                            maxWidth="120px"
                            minHeight="40px"
                            minWidth="80px"
                            summaryText="summaryTextString"
                            themeNames="small, reverse"
                            visible="true"
                            width="100px">
            </accordionPanel>
        </accordion>

        <formLayout id="formLayoutId"
                    classNames="cssClassName1, cssClassName2"
                    css="color: red;"
                    dataContainer="orderDc"
                    enabled="true"
                    height="50px"
                    maxHeight="55px"
                    maxWidth="120px"
                    minHeight="40px"
                    minWidth="80px"
                    visible="true"
                    width="100px"
                    labelsPosition="ASIDE">
            <formItem colspan="3"
                      enabled="false"
                      visible="false">
                <textField id="forNumber" property="number"/>
            </formItem>
            <formItem colspan="2"
                      enabled="false"
                      label="amountLabel"
                      visible="false">
                <bigDecimalField id="forAmount" property="amount"/>
            </formItem>
            <responsiveSteps>
                <responsiveStep
                        columns="5"
                        labelsPosition="TOP"
                        minWidth="100px"/>
            </responsiveSteps>
        </formLayout>

        <scroller id="scrollerId"
                  classNames="cssClassName1, cssClassName2"
                  css="color: red;"
                  height="50px"
                  maxHeight="55px"
                  maxWidth="120px"
                  minHeight="40px"
                  minWidth="80px"
                  scrollBarsDirection="BOTH"
                  visible="true"
                  width="100px">
            <checkbox id="scrollerChild"/>
        </scroller>

        <split id="splitLayoutId"
               classNames="cssClassName1, cssClassName2"
               css="color: red;"
               height="50px"
               maxHeight="55px"
               maxWidth="120px"
               minHeight="40px"
               minWidth="80px"
               orientation="HORIZONTAL"
               splitterPosition="5.6"
               themeNames="small, minimal"
               visible="true"
               width="100px">
            <scroller id="splitPrimaryChild"/>
            <vbox id="splitSecondaryChild"/>
        </split>

        <tabs id="tabsId"
              classNames="cssClassName1, cssClassName2"
              css="color: red;"
              height="50px"
              maxHeight="55px"
              maxWidth="120px"
              minHeight="40px"
              minWidth="80px"
              orientation="HORIZONTAL"
              themeNames="small, minimal"
              visible="true"
              width="100px">
            <tab id="tab1"
                 classNames="cssClassName1, cssClassName2"
                 css="color: red;"
                 enabled="true"
                 flexGrow="45.54"
                 label="labelString"
                 themeNames="icon-on-top"
                 visible="true">
                <tooltip text="tooltipText"
                         focusDelay="1"
                         hideDelay="2"
                         hoverDelay="3"
                         manual="true"
                         opened="true"
                         position="BOTTOM"
                />
            </tab>
            <tab id="tab2"
                 classNames="cssClassName1, cssClassName2"
                 css="color: red;"
                 enabled="true"
                 flexGrow="45.44"
                 themeNames="icon-on-top"
                 visible="true">
                <textField id="tab2Child"/>
            </tab>
        </tabs>


        <tabSheet id="tabSheetId"
                  classNames="cssClassName1, cssClassName2"
                  css="color: red;"
                  height="50px"
                  maxHeight="55px"
                  maxWidth="120px"
                  minHeight="40px"
                  minWidth="80px"
                  themeNames="small bordered"
                  visible="true"
                  width="100px">
            <tab id="tab1"
                 label="tab1Label">
                <hbox>
                    <nativeLabel text="tab1Child1"/>
                    <nativeLabel text="tab1Child2"/>
                </hbox>
                <tooltip text="tooltipText"
                         focusDelay="1"
                         hideDelay="2"
                         hoverDelay="3"
                         manual="true"
                         opened="true"
                         position="BOTTOM"
                />
            </tab>
            <tab id="tab2"
                 label="tab2Label">
                <textField value="tab2Child"/>
            </tab>
        </tabSheet>
    </layout>
</view>