<view xmlns="http://jmix.io/schema/flowui/view">
    <data readOnly="true">
        <instance id="customerDc"
                  class="test_support.entity.sales.Customer">
            <fetchPlan extends="_base"/>
            <loader id="orderDl">
                <query>
                    <![CDATA[select e from test_Customer e]]>
                </query>
            </loader>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <emailField id="emailFieldId"
                    allowedCharPattern="charPattern"
                    autocapitalize="SENTENCES"
                    autocomplete="ADDITIONAL_NAME"
                    autocorrect="true"
                    autofocus="true"
                    autoselect="true"
                    classNames="cssClassName1, cssClassName2"
                    clearButtonVisible="true"
                    enabled="true"
                    errorMessage="errorMessageString"
                    height="50px"
                    helperText="helperTextString"
                    invalid="false"
                    label="labelString"
                    maxHeight="55px"
                    maxLength="10"
                    maxWidth="120px"
                    minHeight="40px"
                    minLength="1"
                    minWidth="80px"
                    pattern="patternString"
                    placeholder="placeholderString"
                    readOnly="true"
                    required="true"
                    requiredMessage="requiredMessage"
                    requiredIndicatorVisible="true"
                    tabIndex="3"
                    themeNames="small, align-right"
                    title="titleString"
                    value="example@email.com"
                    valueChangeMode="ON_CHANGE"
                    valueChangeTimeout="50"
                    visible="true"
                    width="100px">
            <tooltip text="tooltipText"
                     focusDelay="1"
                     hideDelay="2"
                     hoverDelay="3"
                     manual="true"
                     opened="true"
                     position="BOTTOM"
            />
        </emailField>
        <emailField id="emailFieldWithValueId" dataContainer="customerDc" property="email"/>
    </layout>
</view>