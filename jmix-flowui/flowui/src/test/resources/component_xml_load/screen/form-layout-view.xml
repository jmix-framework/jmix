<view xmlns="http://jmix.io/schema/flowui/view">
    <layout>
        <formLayout id="defaultFormLayout">
            <textField/>
            <bigDecimalField/>
        </formLayout>

        <formLayout id="formLayoutCustomLabelPosition"
                    labelsPosition="ASIDE">
            <formItem>
                <textField/>
            </formItem>
            <formItem>
                <bigDecimalField/>
            </formItem>
        </formLayout>

        <formLayout id="formLayoutWithResponsiveSteps">
            <formItem>
                <textField/>
            </formItem>
            <formItem>
                <bigDecimalField/>
            </formItem>
            <responsiveSteps>
                <responsiveStep minWidth="0" labelsPosition="TOP" columns="1"/>
                <responsiveStep minWidth="10em" labelsPosition="ASIDE" columns="1"/>
                <responsiveStep minWidth="30em" labelsPosition="TOP" columns="2"/>
                <responsiveStep minWidth="40em" labelsPosition="ASIDE" columns="2"/>
                <responsiveStep minWidth="60em" labelsPosition="TOP" columns="4"/>
            </responsiveSteps>
        </formLayout>
    </layout>
</view>