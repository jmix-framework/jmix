<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="ordersDc"
                    class="test_support.entity.sales.Order">
            <fetchPlan extends="_base"/>
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from test_Order e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <dataGrid id="dataGrid"
                  allRowsVisible="true"
                  classNames="cssClassName1, cssClassName2"
                  columnReorderingAllowed="true"
                  detailsVisibleOnClick="true"
                  dropMode="BETWEEN"
                  enabled="true"
                  height="50px"
                  maxHeight="55px"
                  maxWidth="120px"
                  minHeight="40px"
                  minWidth="80px"
                  multiSort="true"
                  nestedNullBehavior="THROW"
                  pageSize="20"
                  rowsDraggable="true"
                  selectionMode="MULTI"
                  themeNames="column-borders, compact"
                  verticalScrollingEnabled="true"
                  visible="true"
                  width="100px"

                  dataContainer="ordersDc">
            <columns includeAll="true" exclude="number, amount, date">
            </columns>
        </dataGrid>

        <dataGrid id="anotherDataGrid" dataContainer="ordersDc">
            <columns>
                <column key="number"
                        autoWidth="true"
                        flexGrow="5"
                        footer="footer"
                        frozen="false"
                        header="header"
                        resizable="true"
                        sortable="true"
                        textAlign="END"
                        visible="true"
                        width="100px"

                        property="number"/>
                <column property="amount"/>
                <column property="date"/>
            </columns>
            <actions>
                <action id="gridAction"/>
            </actions>
        </dataGrid>

        <dataGrid id="metaClassDataGrid" metaClass="test_Order">
            <columns>
                <column property="number"/>
                <column property="amount"/>
            </columns>
        </dataGrid>

        <treeDataGrid id="treeDataGrid"
                      allRowsVisible="true"
                      classNames="cssClassName1, cssClassName2"
                      columnReorderingAllowed="true"
                      detailsVisibleOnClick="true"
                      dropMode="BETWEEN"
                      enabled="true"
                      height="50px"
                      maxHeight="55px"
                      maxWidth="120px"
                      minHeight="40px"
                      minWidth="80px"
                      multiSort="true"
                      nestedNullBehavior="THROW"
                      pageSize="20"
                      rowsDraggable="true"
                      selectionMode="MULTI"
                      themeNames="column-borders, compact"
                      verticalScrollingEnabled="true"
                      visible="true"
                      width="100px"

                      dataContainer="ordersDc" hierarchyProperty="number">
            <columns includeAll="true" exclude="number, amount, date">
            </columns>
        </treeDataGrid>

        <treeDataGrid id="anotherTreeDataGrid" dataContainer="ordersDc" hierarchyProperty="number">
            <columns>
                <column key="number"
                        autoWidth="true"
                        flexGrow="5"
                        footer="footer"
                        frozen="false"
                        header="header"
                        resizable="true"
                        sortable="true"
                        textAlign="END"
                        visible="true"
                        width="100px"

                        property="number"/>
                <column property="amount"/>
                <column property="date"/>
            </columns>
            <actions>
                <action id="gridAction"/>
            </actions>
        </treeDataGrid>

        <treeDataGrid id="metaClassTreeDataGrid" metaClass="test_Order" hierarchyProperty="number">
            <columns>
                <column property="number"/>
                <column property="amount"/>
            </columns>
        </treeDataGrid>
    </layout>
</view>