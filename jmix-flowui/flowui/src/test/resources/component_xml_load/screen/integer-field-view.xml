<view xmlns="http://jmix.io/schema/flowui/view">
    <data readOnly="true">
        <instance id="orderLineDc"
                  class="test_support.entity.sales.OrderLine">
            <fetchPlan extends="_base"/>
            <loader id="orderLineDl">
                <query>
                    <![CDATA[select e from test_OrderLine e]]>
                </query>
            </loader>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <integerField
                id="integerFieldId"
                autocapitalize="SENTENCES"
                autocomplete="ADDITIONAL_NAME"
                autocorrect="true"
                autofocus="true"
                autoselect="true"
                classNames="cssClassName1, cssClassName2"
                clearButtonVisible="true"
                css="color: red;"
                enabled="true"
                errorMessage="errorMessageString"
                stepButtonsVisible="true"
                height="50px"
                helperText="helperTextString"
                label="labelString"
                max="500"
                maxHeight="55px"
                maxWidth="120px"
                min="-500"
                minHeight="40px"
                minWidth="80px"
                placeholder="placeholderString"
                readOnly="true"
                required="true"
                requiredMessage="requiredMessageString"
                tabIndex="3"
                themeNames="small, align-right"
                title="titleString"
                step="10"
                value="50"
                valueChangeMode="ON_CHANGE"
                valueChangeTimeout="50"
                visible="true"
                width="100px">
            <tooltip text="tooltipText"
                     focusDelay="1"
                     hideDelay="2"
                     hoverDelay="3"
                     manual="true"
                     opened="true"
                     position="BOTTOM"
            />
        </integerField>
        <integerField id="integerFieldWithValueId" dataContainer="orderLineDc" property="quantity"/>
    </layout>
</view>