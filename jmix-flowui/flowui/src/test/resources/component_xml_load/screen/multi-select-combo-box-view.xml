<view xmlns="http://jmix.io/schema/flowui/view">
    <data readOnly="true">
        <instance id="productDc"
                  class="test_support.entity.sales.Product">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
        <collection id="productTagsDc"
                    class="test_support.entity.sales.ProductTag">
            <fetchPlan extends="_base"/>
            <loader id="productTagsDl">
                <query>
                    <![CDATA[select e from test_ProductTag e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <multiSelectComboBox id="multiSelectComboBoxId"
                             allowCustomValue="true"
                             allowedCharPattern="testPattern"
                             autoExpand="BOTH"
                             autofocus="true"
                             autoOpen="true"
                             classNames="cssClassName1, cssClassName2"
                             clearButtonVisible="true"
                             css="color: red;"
                             enabled="true"
                             errorMessage="errorMessageString"
                             height="50px"
                             helperText="helperTextString"
                             dataContainer="productDc"
                             property="tags"
                             itemsContainer="productTagsDc"
                             label="labelString"
                             maxHeight="55px"
                             maxWidth="120px"
                             minHeight="40px"
                             minWidth="80px"
                             opened="true"
                             pageSize="20"
                             placeholder="placeholderString"
                             readOnly="true"
                             required="true"
                             selectedItemsOnTop="true"
                             tabIndex="3"
                             themeNames="small, align-center"
                             title="titleString"
                             visible="true"
                             width="100px">
            <tooltip text="tooltipText"
                     focusDelay="1"
                     hideDelay="2"
                     hoverDelay="3"
                     manual="true"
                     opened="true"
                     position="BOTTOM"
            />
        </multiSelectComboBox>

        <multiSelectComboBoxPicker id="multiSelectComboBoxPickerId"
                                   allowCustomValue="true"
                                   allowedCharPattern="testPattern"
                                   autoExpand="BOTH"
                                   autofocus="true"
                                   autoOpen="true"
                                   classNames="cssClassName1, cssClassName2"
                                   css="color: red;"
                                   clearButtonVisible="true"
                                   enabled="true"
                                   errorMessage="errorMessageString"
                                   height="50px"
                                   helperText="helperTextString"
                                   dataContainer="productDc"
                                   property="tags"
                                   itemsContainer="productTagsDc"
                                   label="labelString"
                                   maxHeight="55px"
                                   maxWidth="120px"
                                   minHeight="40px"
                                   minWidth="80px"
                                   opened="true"
                                   pageSize="20"
                                   placeholder="placeholderString"
                                   readOnly="true"
                                   required="true"
                                   selectedItemsOnTop="true"
                                   tabIndex="3"
                                   themeNames="small, align-center"
                                   title="titleString"
                                   visible="true"
                                   width="100px">
            <tooltip text="tooltipText"
                     focusDelay="1"
                     hideDelay="2"
                     hoverDelay="3"
                     manual="true"
                     opened="true"
                     position="BOTTOM"
            />
            <actions>
                <action id="lookup" type="entity_lookup"/>
                <action id="clear" type="entity_clear"/>
            </actions>
        </multiSelectComboBoxPicker>

        <multiSelectComboBox id="multiSelectComboBoxMetaClassId"
                             metaClass="test_ProductTag"/>

        <multiSelectComboBoxPicker id="multiSelectComboBoxPickerMetaClassId"
                                   metaClass="test_ProductTag"/>
    </layout>
</view>