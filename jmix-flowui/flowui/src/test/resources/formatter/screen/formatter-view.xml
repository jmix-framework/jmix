<screen xmlns="http://jmix.io/schema/flowui/screen">
    <layout>
        <valuePicker id="dateFormatterField">
            <formatter>
                <date format="yyyy-MM-dd"/>
            </formatter>
        </valuePicker>
        <valuePicker id="dateTimeFormatterField">
            <formatter>
                <date type="DATETIME"/>
            </formatter>
        </valuePicker>
        <valuePicker id="numberFormatterField">
            <formatter>
                <number format="#,###"/>
            </formatter>
        </valuePicker>
        <valuePicker id="defaultNumberFormatterField"/>
    </layout>
</screen>
