<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:vcc="http://jmix.io/schema/vaadin-commercial-components/ui">
    <layout>
        <vcc:board id="board"
                   classNames="cssClassName1, cssClassName2"
                   css="color: red;"
                   enabled="true"
                   height="50px"
                   maxHeight="55px"
                   maxWidth="120px"
                   minHeight="40px"
                   minWidth="80px"
                   visible="true"
                   width="100px">
            <vcc:boardRow id="rootRow"
                          classNames="cssClassName1, cssClassName2"
                          css="color: red;"
                          enabled="true"
                          height="50px"
                          maxHeight="55px"
                          maxWidth="120px"
                          minHeight="40px"
                          minWidth="80px"
                          visible="true"
                          width="100px">
                <vcc:boardRow id="nestedRow">
                    <checkbox id="nestedRow_checkbox"/>
                </vcc:boardRow>
                <checkbox id="rootRow_checkbox"/>
            </vcc:boardRow>
            <vcc:boardRow id="secondRow"/>
        </vcc:board>
    </layout>
</view>
