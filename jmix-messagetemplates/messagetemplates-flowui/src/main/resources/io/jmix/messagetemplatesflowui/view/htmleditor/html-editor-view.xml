<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://HtmlEditorView.title"
      focusComponent="codeEditor">
    <actions>
        <action id="closeAction" type="view_close"/>
    </actions>
    <layout expand="codeEditor">
        <codeEditor id="codeEditor"
                    width="100%"
                    mode="HTML"/>
        <hbox id="detailActions">
            <button id="saveButton" text="msg:///actions.Ok"
                    icon="CHECK" themeNames="primary"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
