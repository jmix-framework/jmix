<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:msgtmp="http://jmix.io/schema/messagetemplates/ui">
    <layout>
        <msgtmp:grapesJs id="grapesJs"
                         classNames="cssClassName1, cssClassName2"
                         css="color: red;"
                         readOnly="true"
                         height="50px"
                         maxHeight="55px"
                         maxWidth="120px"
                         minHeight="40px"
                         minWidth="80px"
                         visible="true"
                         width="100px">
            <msgtmp:plugins>
                <msgtmp:plugin name="grapesjs-blocks-basic"/>
                <msgtmp:plugin name="grapesjs-blocks-flexbox"/>
                <msgtmp:plugin name="grapesjs-custom-code"/>
                <msgtmp:plugin name="grapesjs-plugin-forms"/>
                <msgtmp:plugin name="grapesjs-preset-newsletter"/>
                <msgtmp:plugin name="grapesjs-parser-postcss"/>
                <msgtmp:plugin name="grapesjs-style-filter"/>
                <msgtmp:plugin name="grapesjs-tabs"/>
                <msgtmp:plugin name="grapesjs-tooltip"/>
                <msgtmp:plugin name="grapesjs-tui-image-editor"/>
            </msgtmp:plugins>

            <msgtmp:blocks>
                <msgtmp:block id="myBlock"
                              label="Block label"
                              category="Extra">
                    <msgtmp:content>
                        <![CDATA[<p>This is my first block</p>]]>
                    </msgtmp:content>
                    <msgtmp:attributes>
                        <![CDATA[{ "title": "Insert h1 block" }]]>
                    </msgtmp:attributes>
                </msgtmp:block>
            </msgtmp:blocks>
        </msgtmp:grapesJs>
    </layout>
</view>
