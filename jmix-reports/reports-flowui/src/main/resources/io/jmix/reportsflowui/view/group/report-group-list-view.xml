<view xmlns="http://jmix.io/schema/flowui/view"
        title="msg://reportGroupListView.title"
        focusComponent="reportGroupsDataGrid">

    <data>
        <collection id="groupsDc" class="io.jmix.reports.entity.ReportGroupInfo">
            <loader id="groupsDl"/>
        </collection>
    </data>

    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>

    <facets>
        <settings auto="true"/>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>

    <layout>
        <formLayout id="filterPanel">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="3"/>
                <responsiveStep minWidth="80em" columns="5"/>
            </responsiveSteps>
            <textField id="titleFilter" datatype="string" label="msg://io.jmix.reports.entity/ReportGroup.title"/>
            <textField id="codeFilter" datatype="string" label="msg://io.jmix.reports.entity/ReportGroup.code"/>
            <hbox>
                <button id="searchBtn"
                        text="msg://io.jmix.reportsflowui.view/filter.search"
                        icon="SEARCH"/>
                <button id="clearBtn"
                        text="msg://io.jmix.reportsflowui.view/filter.clear"
                        themeNames="error"
                        icon="TRASH"/>
            </hbox>
        </formLayout>

        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="reportGroupsDataGrid.create"/>
            <button action="reportGroupsDataGrid.edit"/>
            <button action="reportGroupsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="groupsDl"/>
        </hbox>
        <dataGrid id="reportGroupsDataGrid" dataContainer="groupsDc"
                  columnReorderingAllowed="true"
                  width="100%" minHeight="20em">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="localizedTitle"/>
                <column property="code"/>
                <column property="systemFlag"/>
                <column property="source"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>