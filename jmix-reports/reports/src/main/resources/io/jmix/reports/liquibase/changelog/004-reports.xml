<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1-other" author="reports" dbms="postgresql,hsqldb,oracle">
        <dropNotNullConstraint tableName="REPORT_REPORT" columnName="GROUP_ID"/>
    </changeSet>

    <changeSet id="1-mysql" author="reports" dbms="mysql,mariadb">
        <dropNotNullConstraint tableName="REPORT_REPORT" columnName="GROUP_ID" columnDataType="varchar(32)"/>
    </changeSet>

    <changeSet id="1-mssql" author="reports" dbms="mssql">
        <dropNotNullConstraint tableName="REPORT_REPORT" columnName="GROUP_ID" columnDataType="${uuid.type}"/>
    </changeSet>

</databaseChangeLog>
