<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="userPasswordValueDc"
                    class="io.jmix.securityflowui.view.resetpassword.model.UserPasswordValue">
            <loader id="userPasswordValueDl"/>
        </collection>
    </data>
    <actions>
        <action id="closeAction" type="view_close"/>
    </actions>
    <layout>
        <vbox padding="false" spacing="false">
            <span id="resetPasswordLabel" text="msg://resetPasswordView.resetPasswordLabel.text"/>
            <span id="resetPasswordSubLabel" text="msg://resetPasswordView.resetPasswordSubLabel.text"
                  classNames="text-secondary, text-s"/>
        </vbox>
        <dataGrid id="passwordsDataGrid"
                  dataContainer="userPasswordValueDc"
                  height="100%"
                  width="100%"
                  minHeight="15em"
                  visible="false"
                  themeNames="no-border, no-header">
            <columns>
                <column property="username" sortable="false"/>
                <column property="password" sortable="false"/>
            </columns>
        </dataGrid>
        <hbox id="buttonPanel">
            <button id="generateBtn" text="msg://resetPasswordView.generateBtn.text" icon="REFRESH"
                    themeNames="primary"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
