<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://rowLevelRoleModelLookupView.title"
      focusComponent="roleModelsTable">
    <data readOnly="true">
        <collection id="roleModelsDc"
                    class="io.jmix.securityflowui.model.RowLevelRoleModel">
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout expand="roleModelsTable">
        <dataGrid id="roleModelsTable"
                  dataContainer="roleModelsDc"
                  selectionMode="MULTI"
                  minHeight="20em"
                  width="100%">
            <columns>
                <column property="name"/>
                <column property="code"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
