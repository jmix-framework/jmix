<%
dcId = "${entity.uncapitalizedClassName}Dc"
dlId = "${entity.uncapitalizedClassName}Dl"

def formXml = api.processSnippet('dto_form.xml',
        ['entity': entity,
        'api': api,
        'dcId': dcId,
        'formId': 'form',
        'asideLabelsPosition': asideLabelsPosition])
%><?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="${messageKeys['detailTitle']}"
      focusComponent="form">
    <data>
        <instance id="${dcId}"
                  class="${entity.fqn}">
            <loader id="${dlId}"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <%if (detailFixedFooter) {%>
    <layout alignItems="STRETCH"
            padding="false" spacing="false"
            expand="contentBox">
        <vbox id="contentBox" classNames="overflow-auto">
    <%} else {%>
    <layout>
    <%}%>
        ${formXml}
        <%if (detailFixedFooter) {%>
        </vbox>
        <hbox id="detailActions"
              classNames="px-m py-s bg-contrast-5">
        <%} else {%>
        <hbox id="detailActions">
        <%}%>
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
