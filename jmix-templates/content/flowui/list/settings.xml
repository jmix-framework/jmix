<template xmlns="http://schemas.haulmont.com/studio/template-settings.xsd"
          icon="resource://template/template_browse.svg"
          name="Entity list view (FlowUI)"
          order="10">
    <tags>
        <tag>ENTITY</tag>
        <tag>JPA</tag>
    </tags>
    <description>
        <![CDATA[<html>Entity list view with a table consuming all available space.</html>]]>
    </description>
    <locMessages key="viewTitle" expressionKey="${studioUtils.decapitalize(viewControllerName)}.title">
        <message lang="default">
            <![CDATA[${studioUtils.makeScreenNaturalCaption(entity.className.concat('.browse'), null)}]]>
        </message>
    </locMessages>
    <steps>
        <step name="Entity list view" order="0"/>
        <step name="Entity list view fetch plan" order="1"/>
    </steps>
    <property caption="Entity"
              code="entity"
              propertyType="ENTITY"
              required="true"/>
    <property caption="Entity fetch plan"
              code="fetchPlan"
              step="1"
              propertyType="VIEW_COMPONENT"
              relatedProperty="entity"
              required="true"/>
    <property caption="Table type"
              code="tableType"
              propertyType="FLOW_TABLE_TYPE"
              relatedProperty="entity"
              required="true"/>
    <property caption="Hierarchical property"
              code="hierarchicalProperty"
              propertyType="HIERARCHICAL_PROPERTY"
              relatedProperty="tableType"
              required="false"/>
    <property caption="Table actions"
              code="tableActions"
              defaultValue="create,edit,remove"
              propertyType="MULTI_OPTION"
              preferences="true"
              optionsString="create,edit,remove"/>
    <property caption="Multiselect"
              code="multiselect"
              propertyType="BOOLEAN"
              preferences="true"/>

    <property caption="Descriptor name"
              code="viewDescriptorName"
              propertyType="DESCRIPTOR_NAME"
              advanced="true"
              dynamic="true"
              sourceName="descriptor"
              required="true"
              valueTemplate="${api.evaluateScript('screen/descriptorFileName.groovy', ['entity': entity])}-list-view">
        <dependency code="entity"/>
    </property>

    <property caption="Controller name"
              code="viewControllerName"
              propertyType="CLASS_NAME"
              advanced="true"
              dynamic="true"
              sourceName="controller"
              required="true"
              valueTemplate="${entity.className}ListView">
        <dependency code="entity"/>
    </property>

    <property caption="Screen id"
              code="viewId"
              propertyType="SCREEN_ID"
              required="true"
              dynamic="true"
              advanced="true"
              valueTemplate="${entity.name!=null?entity.name:entity.className}.browse">
        <dependency code="entity"/>
    </property>

    <property caption="Screen route"
              code="route"
              propertyType="STRING"
              advanced="true"
              dynamic="true"
              required="true"
              valueTemplate="${api.pluralForm(entity.uncapitalizedClassName)}">
        <dependency code="entity"/>
    </property>


    <source fileExt="xml"
            name="descriptor"/>
    <source fileExt="java"
            name="controller"/>
</template>
