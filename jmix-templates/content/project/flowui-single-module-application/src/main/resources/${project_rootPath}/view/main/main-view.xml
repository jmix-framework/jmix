<mainScreen xmlns="http://jmix.io/schema/flowui/main-screen"
            title="msg://MainView.title">
    <actions>
        <action id="logout" type="logout"/>
    </actions>
    <appLayout>
        <navigationBar>
            <header id="header" className="jmix-main-screen-header">
                <drawerToggle id="drawerToggle"
                              className="jmix-main-screen-drawer-toggle"
                              themeName="contrast"
                              ariaLabel="msg://drawerToggle.ariaLabel"/>
                <h1 id="screenTitle" className="jmix-main-screen-screen-title"/>
            </header>
        </navigationBar>
        <drawerLayout>
            <section id="section" className="jmix-main-screen-section">
                <h2 id="applicationTitle"
                    text="msg://applicationTitle.text"
                    className="jmix-main-screen-application-title"/>
                <nav id="navigation"
                     className="jmix-main-screen-navigation"
                     ariaLabel="msg://navigation.ariaLabel">
                    <listMenu id="menu"/>
                </nav>
                <footer id="footer" className="jmix-main-screen-footer">
                    <userIndicator id="userIndicator"/>
                    <button id="logoutButton"
                            action="logout"
                            className="jmix-logout-button"/>
                </footer>
            </section>
        </drawerLayout>
    </appLayout>
</mainScreen>