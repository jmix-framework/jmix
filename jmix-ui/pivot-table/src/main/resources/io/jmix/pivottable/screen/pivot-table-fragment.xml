<fragment xmlns="http://jmix.io/schema/ui/fragment"
        xmlns:pivot="http://jmix.io/schema/ui/pivot-table"
        caption="msg://screenCaption">
    <data>
        <keyValueCollection id="pivotTableDc">
            <loader id="pivotTableDl"/>
        </keyValueCollection>

    </data>
    <layout height="100%" spacing="true" expand="pivotTable">
        <button id="exportExcel"
                caption="msg://exportExcel"
                icon="FILE_EXCEL_O"/>
        <pivot:pivotTable id="pivotTable" dataContainer="pivotTableDc"
                          width="100%">
            <pivot:properties/>
        </pivot:pivotTable>
    </layout>
</fragment>