<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://resetPasswordView.resetPasswordsTitle">
    <actions>
        <action id="saveAction"
                actionVariant="PRIMARY"
                icon="CHECK"
                text="msg://resetPasswordView.generateSave"/>
        <action id="closeAction"
                icon="CLOSE"
                text="msg:///actions.Close"/>
    </actions>
    <layout>
        <p id="resetPasswordTooltip" text="msg://resetPasswordView.printPasswords"/>
        <textArea id="readyPassword" visible="false" width="100%"/>
        <hbox id="buttonPanel">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
