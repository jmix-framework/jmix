<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://reportBrowser">

    <data>
        <collection id="reportDc"
                    class="io.jmix.reports.entity.Report"
                    fetchPlan="report.view">
            <loader id="reportDl">
                <query>select r from report_Report r
                    <condition>
                        <and>
                            <c:jpql>
                                <c:join>report_ReportInputParameter p</c:join>
                                <c:where>p.report.id = r.id and p.className like :javaClassName</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>

    <dialogMode height="theme://cuba.gui.dialogSize.height.xlarge"
                width="theme://cuba.gui.dialogSize.width.xlarge"
                resizable="true"/>

    <layout expand="table" spacing="true">
        <filter id="genericFilter" dataLoader="reportDl" applyTo="table">
            <properties include=".*"/>
        </filter>
        <groupTable id="table" editable="false" multiselect="true" width="100%" dataContainer="reportDc">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <buttonsPanel>
                <button id="createBtn" action="table.create"/>
                <popupButton id="popupCreateBtn" icon="FILE_O" caption="mainMsg://actions.Create"/>
                <button action="table.edit"/>
                <button action="table.remove"/>
                <button id="copy" icon="font-icon:COPY"/>
                <button id="import" icon="font-icon:UPLOAD" description="msg://button.import"/>
                <button id="export" icon="font-icon:DOWNLOAD" description="msg://button.export"/>
                <button id="runReport" icon="font-icon:ANGLE_DOUBLE_RIGHT"/>
                <button id="executionsButton" action="table.executions"/>
            </buttonsPanel>
            <pagination/>
            <columns>
                <group>
                    <column id="group" width="200px"/>
                </group>
                <column id="locName"/>
                <column id="description" maxTextLength="100"/>
                <column id="code"/>
            </columns>
        </groupTable>
    </layout>
</window>