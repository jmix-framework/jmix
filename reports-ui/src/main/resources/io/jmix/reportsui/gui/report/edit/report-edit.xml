                       height="100%"/>
            </tab>
            <tab id="localesTab" caption="msg://localesTab">
                <frame src="/io/jmix/reportsui/gui/report/edit/tabs/locales.xml" id="localesFrame" width="100%"
                       height="100%"/>
            </tab>
        </tabSheet>
        <hbox spacing="true">
