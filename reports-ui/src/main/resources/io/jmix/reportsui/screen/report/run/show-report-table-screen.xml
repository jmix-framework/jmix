<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://showReportTable.caption">

    <data>
        <collection id="reportsDc"
                    class="io.jmix.reports.entity.Report">
            <loader id="reportsDl">
                <query>
                    <![CDATA[select r from report_Report r, in (r.templates) t where t.reportOutputType = 90]]></query>
            </loader>
        </collection>
        <collection id="reportsDl"
                    class="io.jmix.core.entity.KeyValueEntity"/>
    </data>

    <dialogMode height="800"
                width="1024"
                resizable="true"/>

    <layout spacing="true" expand="tablesVBoxLayout">
        <hbox id="reportSelectorBox" spacing="true">
            <label id="reportLookupLabel" align="MIDDLE_CENTER" value="msg://caption.reportForTable"/>
            <entityComboBox id="reportEntityComboBox" optionsContainer="reportsDc" width="400px"/>
        </hbox>

        <groupBox id="reportParamsBox" collapsable="true" collapsed="false" visible="false"
                  caption="msg://caption.reportParameters" spacing="true">
            <vbox id="parametersFrameHolder">

            </vbox>
            <button id="printReportBtn" caption="msg://input.printReport" icon="ANGLE_DOUBLE_RIGHT"/>
        </groupBox>

        <vbox id="tablesVBoxLayout" spacing="true"/>
    </layout>
</window>