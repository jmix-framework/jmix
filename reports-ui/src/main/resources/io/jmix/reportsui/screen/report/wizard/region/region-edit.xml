<window xmlns="http://jmix.io/schema/ui/window"
        messagesPack="io.jmix.reportsui.screen.report.wizard"
        caption="msg://regionEditor">

    <data>
        <instance id="reportRegionDc"
                  class="io.jmix.reports.entity.wizard.ReportRegion">
            <collection id="reportRegionPropertiesTableDc" property="regionProperties"/>
        </instance>
    </data>

    <dialogMode width="950"/>

    <actions>
        <action id="addItemAction"/>
        <action id="removeItemAction"/>
        <action id="upItemAction"/>
        <action id="downItemAction"/>
    </actions>

    <layout spacing="true">
        <label id="tipLabel"
               stylename="report-wizard-tip-label"
               width="100%"/>

        <hbox id="mainContent" width="100%" expand="treePanel">
            <groupBox id="treePanel" height="500px">
                <fragment id="entityTreeFrame" screen="report_EntityTree.fragment" width="100%" height="100%"/>
            </groupBox>
            <vbox id="btnsControlPanel" margin="true" spacing="true" width="AUTO">
                <button id="addItem" action="addItemAction" icon="ARROW_RIGHT" width="40px"/>
                <button id="removeItem" action="removeItemAction" icon="REMOVE" width="40px"/>
                <button id="upItem" enable="false" icon="CARET_UP" width="40px"/>
                <button id="downItem" icon="CARET_DOWN" width="40px"/>
            </vbox>
            <groupBox id="selectedTreeItemsPanel" width="500px" height="500px">
                <table id="propertiesTable"
                       dataContainer="reportRegionPropertiesTableDc"
                       multiselect="true"
                       sortable="false"
                       reorderingAllowed="false"
                       columnControlVisible="false"
                       width="100%" height="100%">
                    <columns>
                        <column id="hierarchicalLocalizedName" caption="msg://properties"/>
                    </columns>
                </table>
            </groupBox>
        </hbox>
        <hbox spacing="true" stylename="c-edit-window-actions">
            <button id="windowCommitAndClose" action="windowCommitAndClose" icon="font-icon:CHECK"/>
            <button id="windowClose" action="windowClose" icon="EDITOR_CANCEL"/>
        </hbox>
    </layout>
</window>