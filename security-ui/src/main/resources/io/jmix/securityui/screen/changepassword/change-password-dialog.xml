<window xmlns="http://jmix.io/schema/ui/window">
    <dialogMode forceDialog="true"
                width="AUTO"
                height="AUTO"/>
    <layout spacing="true">
        <form id="form">
            <passwordField id="currentPasswordField"
                           caption="msg://ChangePasswordDialog.currentPassword"
                           visible="false"/>
            <passwordField id="passwordField"
                           caption="msg://ChangePasswordDialog.password"/>
            <passwordField id="confirmPasswordField"
                           caption="msg://ChangePasswordDialog.confirmPassword"/>
        </form>
        <hbox id="actionsBox"
              align="MIDDLE_RIGHT"
              spacing="true">
            <button id="okBtn"
                    caption="msg:///actions.Ok"
                    shortcut="ENTER"/>
            <button id="cancelBtn"
                    caption="msg:///actions.Cancel"/>
        </hbox>
    </layout>
</window>