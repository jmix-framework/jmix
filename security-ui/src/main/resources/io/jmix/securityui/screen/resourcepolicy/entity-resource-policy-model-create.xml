<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://io.jmix.securityui.screen.resourcepolicy/EntityResourcePolicyModelCreate.caption"
        focusComponent="form">
    <data/>
    <dialogMode forceDialog="true"
                width="600px"
                height="AUTO"/>
    <layout spacing="true">
        <form id="form" width="100%">
            <column width="100%">
                <comboBox id="entityField" caption="msg://EntityResourcePolicyModelCreate.entity"/>
                <textField id="policyGroupField" caption="msg://EntityResourcePolicyModelCreate.policyGroup"/>
<!--                <textField id="scopeField" property="scope"/>-->
            </column>
        </form>
        <groupBox caption="msg://EntityResourcePolicyModelCreate.actions" width="100%">
            <checkBox id="allActionsCheckBox" caption="msg://EntityResourcePolicyModelCreate.allActions"/>
            <checkBox id="createCheckBox" caption="msg://EntityResourcePolicyModelCreate.create"/>
            <checkBox id="readCheckBox" caption="msg://EntityResourcePolicyModelCreate.read"/>
            <checkBox id="updateCheckBox" caption="msg://EntityResourcePolicyModelCreate.update"/>
            <checkBox id="deleteCheckBox" caption="msg://EntityResourcePolicyModelCreate.delete"/>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="commit"/>
            <button action="cancel"/>
        </hbox>
    </layout>
</window>
