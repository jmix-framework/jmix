<window xmlns="http://jmix.io/schema/ui/window">
    <data>
        <collection id="userDc"
                    class="test_support.entity.sec.User"/>
    </data>
    <actions>
        <action id="screenAction"/>
    </actions>
    <layout>
        <entityComboBox id="entityComboBox"
                        metaClass="sec$User">
            <actions>
                <action id="lpfAction"/>
